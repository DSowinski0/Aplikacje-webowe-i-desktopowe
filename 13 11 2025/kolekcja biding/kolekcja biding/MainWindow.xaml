<Window x:Class="kolekcja_biding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kolekcja_biding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
     
        
        
        
        <ListView>
            <GridView>

                <GridView.Columns>
                    <GridViewColumn  Header="Symbol" DisplayMemberBinding="{Binding Symbol}"></GridViewColumn>
                    <GridViewColumn Header="Nazwa produktu" DisplayMemberBinding="{Binding Nazwa}"></GridViewColumn>
                    <GridViewColumn Header="Ilość" DisplayMemberBinding="{Binding Ilosc}"></GridViewColumn>
                    <GridViewColumn Header="Magazyn" DisplayMemberBinding="{Binding Magazyn}"></GridViewColumn>
                </GridView.Columns>
                
            </GridView>
        </ListView>
        
       
    
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        

        

            <DockPanel>

                <StackPanel>

                    <WrapPanel>



                        <TextBlock DockPanel.Dock="Left" Margin="5"  Width="300" Height="50">Symbol</TextBlock>
                        <TextBox DockPanel.Dock="Right" Margin="5" Background="LightGray" x:Name="symbol" Width="300" Height="50"></TextBox>

                    </WrapPanel>
                    <WrapPanel>

                        <TextBlock DockPanel.Dock="Left" Margin="5"  Width="300" Height="50">Nazwa</TextBlock>
                        <TextBox DockPanel.Dock="Right" Margin="5" Background="LightGray"  Width="300" Height="50" x:Name="nazwa"></TextBox>
                    </WrapPanel>

                    <WrapPanel>
                        <TextBlock DockPanel.Dock="Left" Margin="5"  Width="300" Height="50">LIczba sztuk:</TextBlock>
                        <TextBox DockPanel.Dock="Right" Background="LightGray" Margin="5"  Width="300" Height="50" x:Name="sztuki"></TextBox>
                    </WrapPanel>


                    <WrapPanel>
                        <TextBlock DockPanel.Dock="Left" Margin="5"  Width="300" Height="50">Magazyn</TextBlock>
                        <TextBox DockPanel.Dock="Right" Background="LightGray" Margin="5" Width="300" Height="50" x:Name="magazyn"></TextBox>
                    </WrapPanel>


                    <Button DockPanel.Dock="Bottom" Margin="50" Width="350" Height="75">Zatwierdź</Button>


                </StackPanel>



            </DockPanel>


        </Grid>
    </Window>




                                          




